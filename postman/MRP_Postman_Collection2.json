{
  "info": {
    "_postman_id": "dbe6760d-c9e3-4c2a-8d60-a1bb1c5faaf9",
    "name": "MRP (FINAL UUID VERSION)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Register",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"username\": \"alice\", \"password\": \"s3cret123\" }"
            },
            "url": "{{baseUrl}}/api/users/register"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.token) {",
                  "  pm.environment.set(\"token\", data.token);",
                  "  pm.environment.set(\"aliceUsername\", \"alice\");",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"Username\": \"alice\", \"Password\": \"s3cret123\" }"
            },
            "url": "{{baseUrl}}/api/users/login"
          },
          "response": []
        },
        {
          "name": "Profile (GET)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "GET",
            "url": "{{baseUrl}}/api/users/{{aliceUsername}}/profile"
          },
          "response": []
        }
      ]
    },

    {
      "name": "Media",
      "item": [
        {
          "name": "Create Media",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.id) pm.environment.set('mediaId', data.id);",
                  ""
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Matrix\",\n  \"description\": \"Sci-fi classic\",\n  \"mediaType\": \"movie\",\n  \"releaseYear\": 1999,\n  \"genres\": \"sci-fi,action\",\n  \"ageRestriction\": 16\n}\n"
            },
            "url": "{{baseUrl}}/api/media"
          },
          "response": []
        },

        {
          "name": "List Media (optional query)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/media?query=Matrix",
              "host": ["{{baseUrl}}"],
              "path": ["api", "media"],
              "query": [{ "key": "query", "value": "Matrix" }]
            }
          },
          "response": []
        },

        {
          "name": "Get One Media",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/media/{{mediaId}}"
          },
          "response": []
        },

        {
          "name": "Update Media",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "PUT",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Matrix Reloaded\",\n  \"description\": \"Updated description\",\n  \"mediaType\": \"movie\",\n  \"releaseYear\": 2003,\n  \"genres\": \"sci-fi,action\",\n  \"ageRestriction\": 16\n}"
            },
            "url": "{{baseUrl}}/api/media/{{mediaId}}"
          },
          "response": []
        },

        {
          "name": "Delete Media",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "DELETE",
            "url": "{{baseUrl}}/api/media/{{mediaId}}"
          },
          "response": []
        }
      ]
    },

    {
      "name": "Ratings",
      "item": [
        {
          "name": "Create Rating",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "if (data && data.id) pm.environment.set('ratingId', data.id);",
                  ""
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{ \"stars\": 5, \"comment\": \"Amazing movie!\" }"
            },
            "url": "{{baseUrl}}/api/media/{{mediaId}}/ratings"
          },
          "response": []
        },

        {
          "name": "List Ratings for Media",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/media/{{mediaId}}/ratings"
          },
          "response": []
        },

        {
          "name": "Delete Your Rating",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [{ "value": "{{token}}" }]
            },
            "method": "DELETE",
            "url": "{{baseUrl}}/api/ratings/{{ratingId}}"
          },
          "response": []
        }
      ]
    }
  ]
}
